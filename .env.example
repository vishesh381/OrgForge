# ========================================
# OrgForge Environment Variables
# Copy to .env and fill in real values
# ========================================

# Spring Profile: dev | prod
SPRING_PROFILES_ACTIVE=dev

# JWT
JWT_SECRET=your-super-secret-jwt-key-at-least-256-bits-long

# Salesforce Connected App
SF_CLIENT_ID=your_salesforce_connected_app_consumer_key
SF_CLIENT_SECRET=your_salesforce_connected_app_consumer_secret
SF_REDIRECT_URI=http://localhost:8080/api/auth/salesforce/callback
SF_LOGIN_URL=https://login.salesforce.com

# Claude AI (for Org Chat module)
CLAUDE_API_KEY=your_anthropic_api_key

# PostgreSQL (prod only)
DATABASE_URL=jdbc:postgresql://localhost:5432/orgforgedb
DATABASE_USERNAME=orgforge
DATABASE_PASSWORD=orgforge_local

# Frontend (Vite)
VITE_API_BASE_URL=http://localhost:8080
